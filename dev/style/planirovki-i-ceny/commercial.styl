@import "../mixin/flex.styl"
.layout__wrapper
  max-width: 1260px
  margin: 180px auto 100px auto
  .result__serch
    margin-bottom: 30px
    flex()
    flex-wrap: wrap;
    @media(max-width: 767px)
      padding: 20px 10px 0 10px
      border-top: 1px solid #DADADA
      flex-direction: column
      align-items: flex-end
      .choices
        margin-right: 0
        margin-bottom: 20px !important
        width: 100%
    &__title
      font-size: 24px
      line-height: 34px
      font-family: 'Geometria', Arial, sans-serif
      font-weight: 500
      flex-grow: 1
      @media(max-width: 767px)
        display: none
    .checkbox__wrapper
      margin-right: 20px
      align-self: center
      flex(flex-start, center, row)
      @media(max-width: 767px)
        align-self: flex-end
        label
          flex-direction: row-reverse
          &:before
            margin-right: 0
            margin-left: 10px
          &:after
            left: auto
            right: 4px
        .tooltip__icon
          order: 01
        margin-left: 0
        margin-right: 6px
      input:checked+label
        color: #0072C7
      input:checked+label:before
        border-color: #0072C7
      input:checked+label:after
        background: none
        border: 1px solid #0072C7
        border-top-color: transparent
        border-right-color: transparent
        height: 6px
        transform: rotate(-45deg)
    .view-mode__wrapper
      align-self: center

.button
  &-no-bg
    background-color: transparent
    border-color: transparent
    color: #A3A3A3
    font-family: "Geometria", Arial, sans-serif
    &:hover
      border-color: #003349
      color: #003349
    &:focus
      border-color: #003349
      color: #003349
      background-color: transparent
  &-black
    background-color: #003349
    border-color: #003349
    font-family: "Geometria", Arial, sans-serif
    &:focus
      background-color: #003349
      border-color: #003349


.checkbox__wrapper
  label
    position: relative
    cursor: pointer
    color: #353535
    flex(flex-start, center, row)
    font-family: "Geometria", Arial, sans-serif
    font-size: 14px
    line-height: 17px
    &:before
      content: ''
      display: block
      width: 20px
      min-width: 20px
      height: 20px
      position: relative
      margin-right: 10px
      background-color: #FFF
      border: 1px solid #DADADA
      border-radius 3px
    &:after
      content: ''
      display: none
      width: 12px
      height: 14px
      position: absolute
      left: 5px
      top: 4px
      background: url('../img/planirovki-i-ceny/icons/send.svg') no-repeat 50% 50%
      background-size: 100% auto
  input[type='checkbox']
    display: none
  input:checked+label:after
    display: block
  input:checked+label
    color: #003349
  input:checked+label:before
    border-color: #003349
  input:invalid+label:before
    border-color: #FF4747


.checkbox__wrapper-btn
  position: relative
  label
    color: #353535
    font-family: "Geometria", Arial, sans-serif
    font-size: 14px
    line-height: 17px
    border: 1px solid #DCDCDC
    border-radius: 3px
    cursor: pointer
    min-width: 60px
    height: 50px
    flex(center, center, row)
    box-sizing border-box
    padding: 16px 26px

  input[type='checkbox']
    width: 0.01px
    height: 0.01px
    position absolute
    left: -100px
    top: 0
    opacity: 0
    z-index: -100
  input[type='checkbox']:checked+label, input[type='checkbox']:checked:hover+label
    color: #353535
    background: rgba(220, 220, 220, 0.2)
    border-color: #3A393C
  input[type='checkbox']:hover+label
    color: #353535
    background: rgba(220, 220, 220, 0.2)
    border-color: #3A393C


.view-mode__wrapper
  flex()
  position: relative
  @media(max-width: 1023px)
    display: none
  input[type="radio"]
    width: 0.01px
    height: 0.01px
    position: absolute
    left: 0
    top: 0
    z-index: -100
    opacity: 0
  label
    width: 40px
    min-width: 40px
    height: 40px
    margin-right: 10px
    cursor: pointer
    &:last-child
      margin-right: 0
    svg
      width: 100%
      height: auto
    &:hover
      svg
        path
          fill: #003349
  input[id="view-mode-tile"]:checked~label[for="view-mode-tile"] svg path,
  input[id="view-mode-simple"]:checked~label[for="view-mode-simple"] svg path
    fill: #003349

  input[id="view-mode-tile"]:checked~label[for="view-mode-tile"] svg rect,
  input[id="view-mode-simple"]:checked~label[for="view-mode-simple"] svg rect
    fill: rgba(220, 220, 220, 0.2)


.filters__wrapper
  position: relative
  &__title
    font-size: 24px
    line-height: 34px
    font-family: "Geometria", Arial, sans-serif
    font-weight: 500
    margin-bottom: 20px
    @media(max-width: 767px)
      padding: 0 10px
  &>.button
    width: 100%
    text-align center
    display: none
    .icon__wrapper
      width: 14px
      height: 14px
      display: inline-block
      margin-right: 14px
      img
        width: 100%
        height: auto
    .button__text
      font-size: 16px
      line-height: 20px
      color: #fff
      font-family: "Geometria", Arial, sans-serif
      display: inline-block
      margin-right: 14px
    .button__counter
      display: inline-block
      width: 16px
      height: 16px
      text-align center
      color: #0072C7
      font-family: "Geometria", Arial, sans-serif
      font-size: 12px
