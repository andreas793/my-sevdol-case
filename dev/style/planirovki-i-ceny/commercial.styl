    &-normal
      width: 322px
  .checkbox__section
    .checkbox__wrapper
        width: 140px
        margin-bottom: 4px
        &:last-child
          margin-bottom: 0
    &-number-rooms
      flex()
      .checkbox__wrapper-btn
        margin-right: 20px
        &:last-child
          margin-right: 0
