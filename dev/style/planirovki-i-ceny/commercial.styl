    &__meters-apartment
      font-size: 20px
      line-height: 24px
      font-family: "Geometria-Bold", Arial, sans-serif
      color: #353535
    &__lable
      font-size: 12px
      line-height: 14px
      margin-bottom: 8px
      color: #A3A3A3
    &__text
      font-size: 16px
      line-height: 19px
      color: #353535
    &__footer
      border-top: 1px solid #DADADA
      padding-top: 20px
      box-sizing: border-box
      flex(space-between, center, row)
      flex-wrap: wrap
      .card
        &__cell
          display: inline-block
          margin-bottom: 0
          margin-right: 0
          &-square-meter
            font-size: 14px
            line-height: 17px
            color: #A3A3A3
            width: 50%
          &-price
            font-size: 20px
            line-height: 30px
            font-weight: 500
            margin-bottom: 4px
            color: #0072C7
            font-family: "Geometria-Bold", Arial, sans-serif
            text-align: right
            width: 50%
  @media all and (min-width: 1023px)
    &-row
      display: block
      .card
        &__wrapper
          width: 100%
          margin: 0 0 26px 0
          padding-top: 20px
          flex(flex-start, center, row)
        &__slider
          width: auto
          max-width: 100px
          height: auto
          max-height: 120px
          box-sizing border-box
          margin: 0 0 0 0
        &__title
          width: 147px
          position: relative
          margin-bottom: 34px
          display: block
          font-size: 16px
          line-height: 19px
          .card__number
            font-size: 14px
            line-height: 17px
            margin-bottom: 4px
            margin-top: 10px
            display: block
            color: #A3A3A3
          .card__row
            position: absolute
            left: 0
            bottom: -49px
          .card__cell-type-finishing,
          .card__cell-type-notfinish,
          .card__cell-type-office,
          .card__cell-type-discount
            display: inline-block
            margin-top: 8px
            margin-right: 10px
        &__row
          &-type
            display: none
          &-meters-apartment
            border-right: 1px solid #DADADA
            align-items: center
            margin-bottom: 0
            margin-left: 40px
            .card__cell-deadline
              display: block
              margin-bottom: 0
              margin-right: 40px
            .card__meters-apartment
              font-size: 16px
              line-height: 19px
              font-family: "Geometria", Arial, sans-serif
              width: 115px
          &-info
            padding: 0 40px
            box-sizing: border-box
            justify-content: space-between
            .card__cell
              margin: 0
              &-turn, &-korp
                display: block
                width: 115px
              &-floor
                width: 65px
                margin-right: 0
        &__cell
          &__meters-apartment
            width: 147px
            display: block
          &-deadline
            display: none
          &-turn
            display: block
        &__lable
          display: none
        &__footer
          border-top: none
          border-left: 1px solid #DADADA
          width: 294px
          box-sizing: border-box
          flex-direction: column-reverse
          .card__cell
            margin-bottom: 4px
            margin-right: 0
            display: block
            &-price
              margin-right: 0

.cards__wrapper .card-group__wrapper
  padding: 20px
.cards__wrapper  .card
  &-group__wrapper
    width: 300px
    height: 300px
    padding: 12px
    margin-bottom: 38px
    background-color: #fff
    @media(max-width: 1024px)
      height: auto
    &:before
      content: ''
      display: block
      width: 290px
      height: 50px
      border: 1px solid #DCDCDC
      position: absolute
      bottom: -9px
      left: 4px
      z-index: -1
      background-color: #fff
    &:after
      content: ''
      display: block
      width: 282px
      height: 50px
      border: 1px solid #DCDCDC
      position: absolute
      bottom: -18px
      left: 9px
      z-index: -2
    .card
      &__top
        flex(space-between, flex-start, row)
        @media(max-width: 1024px)
          position: absolute
          top: 0
          left: 0
          right: 0
          padding: 12px
          z-index: 10
        &__rooms
          padding: 6px
          width: 32px
          height: 32px
          text-align: center
          font-size: 16px
          line-height: 132%
          font-family: Roboto-Bold, Arial, sans-serif
          color: #fff
          background-color: #B19A7C
          box-sizing: border-box
        &__group-name
          font-family: Roboto, Arial, sans-serif
          color: #005BB9
          font-size: 16px
          line-height: 132%
          background-color: #DAE8F4
          padding: 6px 12px
          box-sizing: border-box
      &__slider
        @media(max-width: 1024px)
          margin-top: 29px
          z-index: 10
          position: relative
      &__row
        position: relative
        flex-direction: column
        @media(max-width: 1024px)
          z-index: 10
      &__cell
        flex(space-between, center, row)
        width: 100%
        border-bottom: 1px solid #DCDCDC
        padding: 18px 3px 3px 5px
        margin-bottom: 0
        display: none
        &:first-child
          border-bottom-color: #E5EEF7
          background-color: #E5EEF7
        &:last-child
          display: flex
          border-bottom-color: transparent
          padding-top: 12px
          margin-bottom: 7px
          box-sizing: border-box
          .card__title, .card__value
            font-family: "Geometria-Bold", Arial, sans-serif
      &__title
        font-size: 14px
        line-height: 17px
        font-family: "Geometria", Arial, sans-serif
        color: #353535
      &__bg
        position: absolute
        left: 0
        top: 0
        right: 0
        bottom: 0
        z-index: 10
        display: none
        background-color: rgba(95%, 97%, 98%, 0.9);
        padding: 24px
      &__bottom
        display: none
        margin-top: 12px
        input[type="checkbox"]
          width: 0.01px
          height: 0.01px
          position: absolute
          left: 0
          top: 0
          z-index: -10
          opacity: 0
        input[type="checkbox"]:checked~.card__row
          display: block
        input[type="checkbox"]:checked+.card__bottom__title:after
          transform: rotate(135deg)
          top: 6px
        input[type="checkbox"]:checked~.card__bg
          display: block
          z-index: 5
        .card__bottom__title
          color: #005BB9
          font-size: 14px
          line-height: 132%
          padding: 10px 0 0 0
          box-sizing: border-box
          display: block
          position: relative
          z-index: 10
          &:before
            content: ''
            display: block
            width: 300px
            height: 1px
            background: rgba(0, 0, 0, 0.1)
            position: absolute
            top: 0
            left: -12px
          &:after
            content: ''
            display: block
            width: 8px
            height: 8px
            border: 1px solid #005BB9
            border-left-color: transparent
            border-bottom-color: transparent
            transform: rotate(45deg)
            position: absolute
            top: 14px
            right: 0
        .card__row
          display: none
        .card__cell
          display: flex
          margin-right: 0
          padding-left: 5px
          padding-right: 5px
          box-sizing: border-box
          &:first-child
            border-bottom-color: #E5EEF7
            background-color: #E5EEF7
            padding-top: 10px
            margin-top: 19px
          &:last-child .card__title,
          &:last-child .card__value
            font-family: "Roboto", Arial, sans-serif
        @media(max-width: 1024px)
          display: block
    @media(min-width: 1025px)
      &:hover
        .card__top
          position: relative
          z-index 20
          margin-bottom: 16px
        .card__slider
            position: absolute
            top: 55px
            left: 0
        .card__bg
          display: block
        .card__cell
          position: relative
          display: flex
          z-index: 20
          &:last-child
            padding-top: 24px
        .button
          position: relative
          z-index: 20
    .button-no-bg
      border-color: #0072C7
      color: #0072C7
      width: 100%
      max-width: 276px
      text-align: center
      font-size: 14px
      font-family: "Geometria", Arial, sans-serif
      @media(max-width: 1024px)
        position: relative
        z-index: 10
        background: #005BB9
