      overflow: hidden
    &__row-all
      height: auto
    &__content
      box-sizing: border-box
    &__cell
      margin: 0 26px 30px 0
    &__label
      color: #A3A3A3
      margin-bottom: 10px
      font-family: 'Geometria', Arial, sans-serif
      font-size: 14px
      line-height: 17px
    .filters__wrapper__title
