  .filters__actions__panel
    flex(flex-end, flex-start, row)
    padding-bottom: 40px
    margin-bottom: 40px
    border-bottom: 1px solid #dcdcdc
    box-sizing: border-box
    .all-parametrs__wrapper
      flex-grow: 1
      input[type="checkbox"]
        width: 0.01px
        height: 0.01px
        opacity: 0
        position: absolute
        z-index: -100
        left: 0
        top: 0
    .all-parametrs__label
      color: #0072C7
      font-family: "Geometria", Arial, sans-serif
      line-height: 22px
      font-size: 16px
      font-weight: normal
      cursor: pointer
      display: inline-flex
      justify-content: flex-start
      align-items: center
    .all-parametrs__text:after
      content: ""
      min-width: 7px
      width: 7px
      height: 7px
      display: inline-block
      margin-left: 7px
      border: 1px solid #0072C7
      border-top-width: 0
      border-left-width: 0
      transform: rotate(45deg) translateY(-4px)
    .all-parametrs__text.all-parametrs__show:after
      margin-left: 10px
      transform: rotate(225deg) translateY(-2px)
    .all-parametrs__show
      display: none
    .all-parametrs__wrapper input[type="checkbox"]:checked~.all-parametrs__hide
      display: none
    .all-parametrs__wrapper input[type="checkbox"]:checked~.all-parametrs__show
      display: block
    .button.button-no-bg
      margin-right: 10px
      text-transform: none
      letter-spacing: 0





