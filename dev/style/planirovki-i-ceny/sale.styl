@import "../mixin/flex.styl"
.sale
  &__wrapper
    background-color: #F7F5F3
    box-sizing: border-box
    padding: 4px 28px 4px 20px
    margin-bottom: 22px
    width: 100%
    flex(flex-start, center, row)
  &__img
    width: 40px
    min-width: 40px
    height: 40px
    margin-right: 15px
    img
      width: 100%
      height: auto
  &__text
    font-size: 14px
    line-height: 18px
    color: #B19A7C
    font-family: "Roboto", Arial, sans-serif
