@import "default.styl"
@import "fonts.styl"
@import "./content/button.styl"
//@import "menu.styl"
//@import "footer.styl"
@import "mixin/flex.styl"

.pagination__wrapper
  margin: 200px auto 40px auto
  max-width: 1366px
.layout__wrapper
  max-width: 1366px
  margin: 0 auto
  box-sizing: border-box
  position: relative
  @media(max-width: 1366px)
    padding: 0 42px
  @media(max-width: 1023px)
    padding: 0 42px
  @media(max-width: 450px)
    padding: 0 10px
.title__wrapper
  color: #3A393C
  font-family: "Geometria-Bold", Arial, sans-serif
  font-size: 20px
  line-height: 25px
  margin-bottom: 40px
  @media(max-width: 768px)
    margin-bottom: 20px
  @media(max-width: 450px)
    margin-bottom: 20px
.subtitle__wrapper
  font-family: "Geometria", Arial, sans-serif
  font-size: 14px
  line-height: 18px
  color: #A3A3A3
  margin-bottom: 14px
  &-mob
    display: none
  @media(max-width: 450px)
    display: none
    &-mob
      display: block
      margin-bottom: 20px

.location
  &__wrapper
    flex(flex-start, center, row)
    margin-bottom: 25px
    @media(max-width: 768px)
      margin-bottom: 40px
  &__obj
    margin-right: 20px
    padding: 8px
    font-size: 13px
    line-height: 16px
    font-family: "Geometria", Arial, sans-serif
    text-align: center
    &-sd
      background: rgba(0, 114, 199, 0.05)
      border-radius: 5px
      color: #0072C7
    &-mob
      display: none
    @media(max-width: 450px)
      display: none
      &-mob
        display: inline-block
        margin-bottom: 20px
  &__title
    flex(flex-start, center, row)
    &__text
      color: #5E7B87
      font-size: 14px
      line-height: 18px
      font-family: "Geometria", Arial, sans-serif
  &__img__wrapper
    width: 24px
    height: 24px
    margin-right: 4px
    img
      width: 100%
      height: auto

.tabs
  &__wrapper
    flex(flex-end, flex-start, row)
    width: 100%
    border-bottom: 1px solid #DADADA
    margin-bottom: 27px
    position: absolute
    top: 35px
    left: 0
    @media(max-width: 768px)
      position: relative
      top: auto
  &__item
    border-bottom: 2px solid transparent
    margin-right: 40px
    padding-bottom: 20px
    cursor: pointer
    font-size: 14px
    line-height: 18px
    font-family: "Geometria", Arial, sans-serif
  &__item-active
    border-bottom-color: #3A393C

.section__wrapper
  flex(flex-start, center, row)
  margin-bottom: 120px
  @media(max-width: 1023px)
    flex-direction: column-reverse
    margin-bottom: 80px
.table
  &__wrapper
    width: 100%
    max-width: 554px
    @media(max-width: 1023px)
      max-width: 100%
  &__row
    flex()
    border-bottom: 1px solid #dadada
    border-left: 1px solid #dadada
    border-right: 1px solid #dadada
    border-radius: 2px
    &:first-child
      border-top: 1px solid #dadada
    &:last-child
      border: none
      padding-top: 20px
      .table__cell:first-child
        border: none
    @media(max-width: 450px)
      &:nth-child(2) .table__cell:first-child
        height: 56px
  &__cell
    width: 50%
    padding: 10px 20px
    box-sizing: border-box
    font-size: 14px
    line-height: 18px
    color: #3A393C
    font-family: "Geometria", Arial, sans-serif
    &:first-child
      border-right: 1px solid #dadada

  &__row-footer
    .table__cell
      color: #0072C7
      .text-big
        font-size: 24px
        line-height: 30px
        font-family: "Geometria-Bold", Arial, sans-serif
        margin-bottom: 3px
      .text__small
        font-size: 12px
        line-height: 15px
        font-family: 'Geometria', Arial, sans-serif
      &:last-child
        flex(flex-end, center, row)
        padding-right: 0
        .button
          margin-left: auto
    @media(max-width: 450px)
      flex-direction: column
      align-items: flex-end
      .table__cell
        width: 100%
        padding: 0 10px
        .text-big,
        .text__small
          text-align: right
          padding-right: 10px
        &:first-child
          margin-bottom: 20px
        &:last-child
          .button
            width: 100%
            text-align: center
            margin: 0 auto
.plane__wrapper
  width: 50%
  height: 380px
  display: none
  @media(max-width: 1023px)
    margin-bottom: 42px
    width: 100%
  &-active
    flex(center, center, row)
  img
    width: 100%
    height: auto
    max-width: 380px
    max-height: 380px

.gallery
  &__wrapper
    flex(center, flex-start, row)
    margin: 0 auto
  &__items
    margin-right: 26px
    flex(flex-start, center, row)
    flex-wrap: wrap
    width: 912px
  &__item
    margin-right: 26px
    margin-bottom: 26px
    &:nth-child(2),
    &:nth-child(4)
      margin-right: 0
    &:first-child
      width: 554px
      height: 340px
    &:nth-child(2)
      width: 322px
      height: 340px
    &:nth-child(3)
      width: 322px
      height: 287px
    &:nth-child(4)
      width: 554px
      height: 287px
    img
      width: 100%
      height: auto
  &__wrapper
    .big__img
      width: 438px
      img
        width: 100%
        height: auto
    @media(max-width: 1385px)
      .gallery
        &__items
          margin-right: 20px
          width: 620px
        &__item
          margin-right: 20px
          margin-bottom: 20px
          &:nth-child(2),
          &:nth-child(4)
            margin-right: 0
          &:first-child
            width: 380px
            height: 233px
          &:nth-child(2)
            width: 220px
            height: 233px
          &:nth-child(3)
            width: 220px
            height: 195px
          &:nth-child(4)
            width: 380px
            height: 195px
      .big__img
        width: 300px
        height: 448px
    @media(max-width: 1030px)
      .gallery
        &__items
          width: 380px
        &__item
          margin-right: 20px
          margin-bottom: 20px
          &:nth-child(2),
          &:nth-child(4)
            margin-right: 0
          &:first-child
            width: 220px
            height: 161px
          &:nth-child(2)
            width: 140px
            height: 161px
          &:nth-child(3)
            width: 140px
            height: 137px
          &:nth-child(4)
            width: 220px
            height: 137px
      .big__img
        width: 220px
        height: 318px
    @media(max-width: 767px)
      display: none
.slider__wrapper
  display: none
  width: 76%
  margin: 0 auto 74px auto
  position: relative
  .slick-track
    flex(flex-start, center, row)
  .slick-slide img
    width: 100%
    height: auto
  .buttons__slider
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    flex(space-between, center, row)
  @media(max-width: 767px)
    display: block













