@import "../mixin/flex.styl"
.filter
    &__items
        flex()
        font-family: Roboto, Arial, sans-serif
        margin-bottom: 61px
        @media(max-width: 1366px)
            flex-wrap: wrap
            justify-content: space-between
        @media(max-width: 1023px)
            margin-bottom: 32px
    &__item
        margin-right: 153px
        &:first-child
            margin-right: 200px
        &:last-child
            margin-right: 0
        @media(max-width: 1366px)
            &:first-child
                margin-right: 10%
                margin-bottom: 20px
            &-floor
                margin-right: 0
        @media(max-width: 767px)
            margin-right: 0
            width: 100%
            &:first-child
                margin-right: 0
            &:last-child
                display: none
    &__label
        font-size: 12px
        line-height: 14px
        color: rgba(51, 51, 51, 0.78)
        opacity: 0.4
        margin-bottom: 9px

.floor
    &__items
        display: inline-flex
        justify-content flex-start
        align-items: center
        border: 1px solid rgba(0, 0, 0, 0.1)
        label
            position: relative
            cursor: pointer
            input
                width: 0.01px
                height: 0.01px
                position: absolute
                z-index: -10
                left: 0
                top: 0
                opacity: 0
            input:checked+.floor__item
                background-color: #005BB9
                color: #fff
            .floor__item
                border-left: 1px solid rgba(0, 0, 0, 0.1)

            &:first-child
                .floor__item
                    border-left-width: 0
                    border-left-color: transparent
    &__item
        width: 48px
        height: 48px
        flex(center, center, row)
        color: rgba(51, 51, 51, 0.6)
        font-family: Roboto, Arial, sans-serif
        font-size: 18px
        line-height: 25px
        @media(max-width: 1023px)
            width: 32px
            height: 32px


.show-type
    &__wrapper
        flex()
        position: relative
        input
            width: 0.01px
            height: 0.01px
            position: absolute
            z-index: -10
            left: 0
            top: 0
            opacity: 0
        input:checked+.show-type__radio
            background-color: #005BB9
            border-color: #005BB9
            color: #fff
        label:first-child .show-type__radio
            border-left-color: #E5E5E5
            border-right-color: transparent
        label:first-child input:checked+.show-type__radio
            border-left-color: #005BB9
        label:last-child input:checked+.show-type__radio
            border-left-color: #005BB9
        @media(max-width: 767px)
            display: none
    &__radio
        font-family: Roboto, Arial, sans-serif
        font-size: 16px
        line-height: 132%
        color: rgba(51, 51, 51, 0.6)
        border: 1px solid #E5E5E5
        border-left-color: transparent
        padding: 5px 16px 6px 16px
        cursor: pointer
        white-space: nowrap




