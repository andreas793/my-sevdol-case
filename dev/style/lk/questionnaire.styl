@import "../mixin/flex.styl"
.tab__items-bottom
  display: none
  @media(max-width: 750px)
    flex()
    width: calc(100% - 10px)
    overflow: auto
    border-bottom: 1px solid #C4C4C4
    margin-left: 10px
    margin-bottom: 32px
    .tab__item-bottom
      font-family: Roboto, Arial, sans-serif
      font-size: 18px
      line-height: 25px
      color: rgba(51, 51, 51, 0.6)
      position: relative
      margin-right: 48px
      white-space: nowrap
      &:after
        content: ''
        display: block
        width: 100%
        height: 2px
        background-color: transparent
        left: 0
        bottom: 0
      &.active
        color: #005BB9
        padding-bottom: 4px
        &:after
          background-color: #005BB9
.questionnaire
  &__wrapper
    width: 786px
    margin-right: 128px
  &__item
      flex(flex-start, center, row)
      width: 768px
      padding: 50px 32px 48px 32px
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1)
      margin-bottom: 60px
      position: relative
  &__title
    font-size: 18px
    line-height: 138%
    font-family Roboto-Bold, Arial, sans-serif
    font-weight: bold
    color: rgba(51, 51, 51, 0.78)
    white-space: nowrap
    flex-grow: 1
    margin-right: 24px
  &__text
    font-size: 16px
    line-height: 132%
    font-family: Roboto, Arial, sans-serif
    color: rgba(51, 51, 51, 0.6)
    margin-right: 16px
    white-space: nowrap
  &__progress
    &__wrapper
      width: 148px
      height: 4px
      position: relative
      background-color: rgba(0,91,185,0.08)
    &__value
      width: 0
      height: 100%
      background-color: #005BB9
  &__wrapper
    .flex__wrapper
      justify-content: space-between
    .button__img
      color: #005BB9
      cursor: pointer
      margin-bottom: 8px
    .icon__wrapper
      margin-right: 12px
      img
        width: 16px
  &__actions
    flex()
    position: absolute
    bottom: -33px
    right: 0
    .button__img
      margin-left: 32px
      font-size: 12px
      line-height: 14px
      font-family: Roboto, Arial, sans-serif
      .icon__wrapper
        background-color: #fff
        width: 12px
        height: 12px
        margin-right: 4px
        img
          width: 100%
          height: auto
      &:hover
        text-decoration: underline
        .icon__wrapper
          background-color: #fff

  &__form
    display: none
    .input__wrapper
      margin-right: 24px
      margin-bottom: 28px
      width: 224px
      &-double
        flex()
        input[type="text"]
          width: calc(50% - 6px)
          margin-right: 12px
          &:last-child
            margin-right: 0
      &:nth-child(3n+3)
        margin-right: 0

    .button__section
      flex(center, center, row)
      width: 100%
  &__item-edit
    width: 100%
    .questionnaire__title,
    .questionnaire__text,
    .questionnaire__progress__wrapper,
    .questionnaire__actions
      display: none
    .questionnaire__form
      flex(center, flex-start, row)
      flex-wrap: wrap
  &__item-view
    flex-wrap: wrap
    .questionnaire__form
      width: 100%
      flex(flex-start, flex-start, row)
      flex-wrap: wrap
      margin-top: 26px
      .input__wrapper
        width: auto
        margin-right: 30px
        margin-bottom: 16px
        .input__label
          margin-bottom: 4px
        input[type="text"]
          border: 0
          padding: 0
      .input__wrapper-double
        max-width: 139px
      .button__wrapper
        display: none
  &__item-add
    margin-right: 0
    width: 100%
    .questionnaire__form
      flex(center, flex-start, row)
      flex-wrap: wrap
      .button__wrapper.edit__close
        margin-right: 24px
    &.active
      display: block
  @media(max-width: 1366px)
    &__wrapper
      width: auto
      min-width: 281px
      flex-grow: 1
      margin-right: 34px
    &__item
      flex-wrap: wrap
      width: auto
      &+.flex__wrapper
        flex-wrap: wrap
        .button__img
          font-size: 16px
          line-height: 132%
          .icon__wrapper
            width: 24px
            height: 24px
            min-width: 24px
            margin-right: 8px
            img, svg
              width: 10px
    &__title
      width: 100%
      white-space: normal
      margin-bottom: 21px
    &__text
      margin-bottom: 11px
  @media(max-width: 1024px)
    &__item
      padding: 27px 16px 32px 16px
    &__form
      .input__wrapper
        width: 100%
        margin-right: 0
  @media(max-width: 973px)
    &__wrapper .button__wrapper
      margin-top: 24px
      width: 100%
      text-align: center
  @media(max-width: 750px)
    &__item
      width: 100%
      padding: 17px 24px 24px 24px
    &__title
      width: 100%
      white-space: normal
      margin-bottom: 23px
      font-size: 16px
      line-height: 132%

    &__text
      width: 100%
      margin-bottom: 11px
    &__wrapper
      margin-right: 0
      display: none
      &.active
        display: block
      .layout__title
        display: none
      .button__wrapper
        width: 100%
    &__wrapper
      padding: 0 10px
      .flex__wrapper
        width: 100%
        margin-top: 60px
        &>div:first-child
          width: 100%
      .edit__questionnaire,
      .delate__questionnaire
        border: none
        padding: 0
        width: auto
      .button__wrapper
        margin-top: 12px
        background-color: #005BB9
        color: #fff
      .digital__mortgage
        display: none


.digital__mortgage
  width: 768px
  padding: 31px 48px 30px 48px
  background-color: #005BB9
  position: relative
  overflow: hidden
  &.popup__show
    cursor: pointer
  &.item-bottom-anchor
    display: none
    @media(max-width: 767px)
      &.active
        display: block
  .title__wrapper
    color: #FFFFFF
    font-size: 24px
    line-height: 29px
    font-family: Gilroy-SemiBold, Arial, sans-serif
    margin-bottom: 9px
  .text__wrapper
    font-size: 18px
    line-height: 25px
    color: #fff
    font-family: Roboto, Arial, sans-serif
    margin-bottom: 15px
  .small__text
    font-size: 10px
    line-height: 12px
    color: #fff
  .img__bg
      position: absolute
      top: 8px
      right: 26px
      width: 129px
      height: 129px
      img
        width: 100%
        height: auto
  input[type="checkbox"]
    width: 0.01px
    height: 0.01px
    position: absolute
    left: 0
    top: 0
    z-index: -1
    opacity: 0
  .checkbox
    &__wrapper
      display: inline-flex
      justify-content: flex-start
      align-items: flex-start
      position: relative
      padding: 0 0 0 28px
      margin-bottom: 20px
      color: #fff
      font-size: 12px
      line-height: 16px
      font-family: Roboto, Arial, sans-serif
      cursor: pointer
      z-index: 2
      &:before, &:after
        content: ''
        position: absolute
        left: 0
        top: 0
        box-sizing: border-box
      &:before
        width: 16px
        height: 16px
        border: 1px solid #fff
        background-color: #FF5454
        display: block
      &:after
        display: none
        border: 1px solid #fff
        border-top-color: transparent
        border-right-color: transparent
        height: 4px
        width: 8px
        transform: rotate(-45deg)
        left: 4px
        top: 4px
    &__text
      position: relative
      pointer-events: none
      &:after
        content: ''
        display: block
        position: absolute
        left: 0
        right: 0
        bottom: -3px
        height: 2px
        background-color: #FF5454
  input:checked+.checkbox__wrapper:after
    display: block
  input:checked+.checkbox__wrapper:before
    background-color: transparent
  input:checked+.checkbox__wrapper .checkbox__text:after
    display: none
  .popup__show
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    z-index: 1
    cursor: pointer


  @media(max-width: 1366px)
    width: 100%

