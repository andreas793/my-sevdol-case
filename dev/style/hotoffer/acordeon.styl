.acordeon
  &__wrapper
    input[type="radio"]
      width: 0.01px
      height: 0.01px
      opacity: 0
      z-index: -100
      position: absolute
    @media(max-width: 1439px)
      padding: 0 20px
      box-sizing: border-box
    @media(max-width: 767px)
      padding: 0

  &__item
    overflow: hidden
    height: 48px
    display: block
    margin-bottom: 20px
    @media(max-width: 767px)
      &-table
        height: 74px

  &__title
    font-size: 18px
    line-height: 138%
    font-family: Gilroy, Arial, sans-serif
    text-align: center
    background-color: #fff
    color: #005BB9
    padding: 11px 0
    border: 1px solid #005BB9
    cursor: pointer
    position: relative
    opacity: 0.5
    @media(max-width: 767px)
      padding: 11px 61px 11px 20px
    &:hover
      opacity: 1
    &:after
      content: ''
      display: block
      width: 10px
      height: 10px
      border: 2px solid #005BB9
      border-right-color: transparent
      border-bottom-color: transparent
      transform: rotate(-135deg)
      position: absolute
      right: 20px
      bottom: 19px
  &__text
    font-size: 18px
    line-height: 25px
    color: rgba(51, 51, 51, 0.78)
    font-family: Roboto, Arial, sans-serif
    flex(flex-start, flex-start, row)
    margin-bottom: 27px
    @media(max-width: 767px)
      font-size: 14px
      line-height: 138%
    .img__wrapper
      width: 22px
      min-width: 22px
      height: 22px
      margin-right: 18px
      img
        width: 100%
        height: auto
  &__content
    border: 1px solid rgba(0, 0, 0, 0.1)
    border-top-color: transparent
    padding: 52px 41px 48px 41px
    box-sizing: border-box
    @media(max-width: 767px)
      padding: 26px 10px 52px 10px
    &-table
      background: rgba(230, 229, 230, 0.3)
      border-radius: 2px
      border-color: rgba(230, 229, 230, 0.3)
      overflow-x: auto
      .acordeon__text
        .img__wrapper
          width: 18px
          min-width: 18px
          height: 18px
          margin-right: 10px
  &__wrapper
    input[type="radio"]:checked+label
      height: auto
    input[type="radio"]:checked+label
      .acordeon__title
        color: #fff
        background: #005BB9
        opacity: 1
        &:after
          border-top-color: #fff
          border-left-color: #fff
          transform: rotate(45deg)
          bottom: 11px
    @media(max-width: 767px)
      .acordeon__item-table .acordeon__title:after
        bottom: 42px
      input[type="radio"]:checked+label.acordeon__item-table .acordeon__title:after
        bottom: 36px










