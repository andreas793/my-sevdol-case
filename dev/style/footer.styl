@import "mixin/flex.styl"

.footer__wrapper
  width: 100%
  padding: 74px 0 82px 0
  background-color: #3A393C
  position: relative
  @media(max-width: 767px)
    padding: 11px 0 72px 0
  .items__wrapper
    max-width: 1310px
    margin: 0 auto
    box-sizing border-box
    flex(space-between, flex-start, row)
    &:first-child
      margin-bottom: 58px
    &:nth-child(2)
      justify-content: flex-start
      margin-bottom: 66px
    &:nth-child(3)
      justify-content: flex-start
      align-items: flex-start
    @media(max-width: 1365px)
      padding: 0 42px
    @media(max-width: 1024px)
      &:first-child
        .item__wrapper:nth-child(7)
          margin-right: 0
    @media(max-width: 1023px)
      flex-wrap: wrap
      &:first-child
        margin-bottom: 0
      &:nth-child(2)
        position: absolute
        left: 296px
        top: 411px
    @media(max-width: 767px)
      padding: 0
      &:nth-child(2)
        position: relative
        left: inherit
        top: inherit
        padding: 0 10px
        margin-bottom: 57px
    .links__wrapper
      flex()
      margin-bottom: 50px
      flex-wrap: wrap
      @media(max-width: 1023px)
        margin-bottom: 0
      @media(max-width: 767px)
        margin-bottom: 48px
      .item
        &__wrapper
          margin-right: 60px
          margin-bottom: 51px
          @media(max-width: 767px)
            margin-right: 0
            margin-bottom: 0
            border-bottom: 1px solid rgba(169, 169, 169, 0.21)
            width: 100%
            padding: 30px 10px
            &:nth-child(n+2)
              padding: 14px 10px
        &__title
          color: #ffffff
          font-size: 16px
          line-eight: 19px
          font-family: 'Gilroy-Bold', Arial, sans-serif
          text-decoration: none
          margin-bottom: 17px
          &:hover
            color: #fff
        &__link
          display: block
          color: rgba(255, 255, 255, 0.5)
          font-size: 14px
          line-height: 16px
          font-family: 'Roboto', Arial, sans-serif
          margin-bottom: 14px
          &:last-child
            margin-bottom: 0
          &:hover
            color: #fff
    .subscription__form
      width: 383px
      min-width: 383px
      padding: 30px 32px 33px 38px
      box-sizing border-box
      background-color: #3A393C
      border: 1px solid rgba(255, 255, 255, 0.2)
      .form
        &__title
          font-size: 16px
          line-height: 19px
          letter-spacing 0.03em
          color: rgba(255, 255, 255, 0.9)
          font-family: 'Gilroy-Bold', Arial, sans-serif
          margin-bottom: 15px
          text-transform: uppercase
        &__text
          font-size: 14px
          line-height: 16px
          color: rgba(255, 255, 255, 0.78)
          font-family: 'Roboto', Arial, sans-serif
          margin-bottom: 29px
          max-width: 307px
        &__input__wrapper
          margin-botto: 20px
          border: 1px solid rgba(169,169,169, 0.21)
          box-sizing border-box
          padding: 15px 20px
          font-size: 14px
          line-height: 18px
          color: rgba(255, 255, 255, 0.9)
          font-family: 'Roboto', Arial, sans-serif
          margin-bottom: 16px
          input
            width: 100%
            background-color: transparent
            border: none
            outline: none
            color: rgba(255, 255, 255, 0.9)
            &::placeholder
              rgba(255, 255, 255, 0.4)
      .button
        width: 100%
        display: inline-block
        padding: 16px 30px
        font-size: 14px
        line-height: 16px
        font-family: 'Roboto', Arial, sans-serif
        color: #fff
        background-color: transparent
        border: 1px solid #FFFFFF
        border-radius: 2px
        white-space: nowrap
        cursor pointer
        &:hover
          color: #fff
      @media(max-width: 1024px)
        min-width: 340px
        width: 340px
        margin-bottom: 40px
      @media(max-width: 1023px)
        min-width: 272px
        width: 272px
        padding: 30px 24px 32px 24px
      @media(max-width: 767px)
        width: 93%
        min-width: auto
        margin: 0 auto 49px auto

    .logo
      &__section
        margin-right: 103px
        @media(max-width: 1365px)
          margin-bottom: 72px
          margin-right: 21px
        @media(max-width: 767px)
          margin-bottom: 48px
          margin-right: 0
      &__wrapper
        width: 159px
        margin-bottom: 11px
        @media(max-width: 1023px)
          width: 138px
        img
          width: 100%
          height: auto
      &__text__p
        margin-bottom: 10px
        color: rgba(255,255,255, 0.5)
        font-size: 12px
        line-height: 14px
        font-family: 'Roboto', Arial, sans-serif
        white-space: nowrap
        @media(max-width: 1024px)
          white-space: normal
        a
          color: rgba(255,255,255, 0.5)
          &:hover
            color: rgba(255,255,255, 1)
    .text__location
      margin-right: 181px
      @media(max-width: 1365px)
        margin-bottom: 27px
        margin-right: 24
      &__p
        font-size: 14px
        line-height: 16px
        color: #fff
        font-family: Roboto, Arial, sans-serif
        margin-bottom: 15px
        max-width: 283px
        position: relative
        padding-left: 30px
        img
          position: absolute
          left: 0
          top: 0
          margin-right: 13px
          width: 14px
          height: 14px
    .social
      &__section
        width: 426px
        @media(max-width: 1023px)
          width: 100%
      &__item
        display: inline-block
        margin-right: 40px
        &:last-child
          margin-right: 0
      &__title
        font-size: 15px
        line-height: 19px
        font-family: 'Gilroy', Arial, sans-serif
        text-transform: uppercase
        color: #fff
        margin-bottom: 18px
        @media(max-width: 767px)
          font-size: 12px
          line-height: 14px
      &__img__wrapper
        flex()
        margin-bottom: 20px
        .social__img
          width: 30px
          height: 30px
          margin-right: 20px
          @media(max-width: 767px)
            width: 24px
            height: 24px
            margin-right: 16px
          &:last-child
            margin-right: 0
          &:hover
            svg
              path
                fill-opacity: 1
      &__text__p
        font-size: 13px
        line-height: 15px
        font-family: 'Roboto', Arial, sans-serif
        color: rgba(255,255,255,0.5)
        margin-bottom: 8px
        &:nth-child
          margin-bottom: 0
        a
          color: rgba(255,255,255, 0.5)
          &:hover
            color: rgba(255,255,255, 1)


    @media(max-width: 767px)
      .footer__text
        padding: 0 10px
        margin-bottom: 34px
    .footer__text__p
      font-size: 12px
      line-height: 14px
      color: rgba(255, 255, 255, 0.5)
      font-family: Roboto, Arial, sans-serif
      max-width: 818px
      width: 100%
      margin-right: 110px
      @media(max-width: 1024px)
        max-width: 540px
        margin-right: 59px
      @media(max-width: 1023px)
        max-width: 273px
        margin-right: 27px
    .footer__text-link
      white-space: nowrap
      font-family: Roboto, Arial, sans-serif
      color: rgba(255, 255, 255, 0.5)
      font-size: 12px
      line-height: 14px
      &:hover
        color: #fff
      @media(max-width: 1024px)
        color: #fff
