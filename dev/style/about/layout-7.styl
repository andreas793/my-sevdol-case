@import "../mixin/flex.styl"

.layout__wrapper-7
  margin-bottom: 196px
  @media(max-width: 767px)
    margin-bottom: 80px
  .layout__title
    marign-bottom: 55px
    @media(max-width: 767px)
      margin-bottom: 20px
.finishing
  &__tabs
    flex()
    @media(max-width: 1366px)
      margin-left: 72px
    @media(max-width: 1023px)
      flex-wrap: wrap
    @media(max-width: 767px)
      margin-left: 10px
  &__tab
    padding: 13px 40px 10px 40px
    color: #005BB9
    font-family: Roboto, Arial, sans-serif
    font-size: 18px
    line-height: 25px
    opacity: 0.5
    border: 1px solid #005BB9
    cursor: pointer
    white-space: nowrap
    @media(max-width: 767px)
      font-size: 16px
      line-height: 132%
      padding: 6px 12px 4px 12px
    &:hover
      opacity: 1
    &-active
      background-color: #005BB9
      opacity: 1
      color: #fff
  &__content
    display: none
    border: 1px solid rgba(0, 0, 0, 0.1)
    box-sizing: border-box
    padding: 42px 0
    @media(max-width: 1366px)
      margin-left: 72px
    @media(max-width: 767px)
      margin-left: 0
      padding: 33px 7px 44px 9px
    &-active
      display: block
    .layout__text
      margin-bottom: 25px
      margin-left: 40px
      max-width: 656px
      @media(max-width: 767px)
        margin-left: 0
  &__text__section
    max-width: 339px
    font-size: 16px
    line-height: 132%
    color: rgba(51, 51, 51, 0.78)
    font-family: Roboto, Arial, sans-serif
    margin-left: 310px
    @media(max-width: 1024px)
      margin-left: 40px
    @media(max-width: 1023px)
      order: -1
      margin-bottom: 17px
      width: 100%
      max-width: 100%
      margin-left: 0
      padding-right: 46%
    @media(max-width: 767px)
      padding-right: 26px
  &__type
    &__tabs
      flex()
      margin-left: 40px
      margin-bottom: 25px
      @media(max-width: 767px)
        margin-left: 0
    &__tab
      color: #005BB9
      font-family: Roboto, Arial, sans-serif
      font-size: 18px
      line-height: 25px
      opacity: 0.3
      margin-right: 44px
      cursor: pointer
      @media(max-width: 767px)
        font-size: 16px
        line-height: 132%
        margin-right: 32px
        &:last-child
          margin-right: 0
      &:hover
        opacity: 1
      &-active
        opacity: 1
    &__content
      display: none
      &-active
        display: block
      .slider__wrapper
        margin-bottom: 30px
        position: relative
        overflow: hidden
        width: 100%
        .slick-initialized .slick-slide
          margin-right: 25px
          @media(max-width: 767px)
            margin-right: 11px
  &__ul
    flex()
    @media(max-width: 1366px)
      flex-wrap: wrap
    &__title
      font-size: 24px
      line-height: 29px
      color: #B19A7C
      font-family: Gilroy-SemiBold, Arial, sans-serif
      max-width: 232px
      margin-right: 51px
      margin-left: 39px
      @media(max-width: 1366px)
        width: 100%
        max-width: 100%
        margin-bottom: 19px
      @media(max-width: 767px)
        margin-left: 0
        margin-right: 0
      &+.finishing__li
        margin-right: 88px
        @media(max-width: 1366px)
          margin-left: 40px
          margin-right: 24px
        @media(max-width: 767px)
          margin-left: 0
          margin-right: 0
          margin-bottom: 11px
        .finishing__li__text
          max-width: 376px
          @media(max-width: 1024px)
            max-width: 280px
          @media(max-width: 767px)
            max-width: 100%
  &__li
    &__text
      font-size: 18px
      line-height: 25px
      color: rgba(51, 51, 51, 0.78)
      font-family: Roboto, Arial, sans-serif
      margin-bottom: 9px
      position: relative
      padding-left: 26px
      box-sizing: border-box
      max-width: 446px
      &:last-child
        margin-bottom: 0
      &:before
        content: ''
        display: inline-block
        position: absolute
        left: 0
        top: 10px
        width: 22px
        min-width: 22px
        height: 1px
        background-color: #B19A7C
      @media(max-width: 1024px)
        max-width: 274px
        


.slider-finishing
  width: 200%
  @media(max-width: 1023px)
    width: 180%
  @media(max-width: 767px)
    width: 190%
  .slick-slide img
    width: 100%
    height: auto
  .slick-arrow
    position: absolute
    bottom: 19px
    z-index: 1
    width: 40px
    min-width: 40px
    height: 40px
    @media(max-width: 1023px)
      display: none !important
    &.slick-next
      background: url("../img/about/icons/slider-next.svg") no-repeat 50% 50%
      left: inherit
      right: calc(50% + 39px)
    &.slick-prev
      background: url("../img/about/icons/slider-prev.svg") no-repeat 50% 50%
      left: inherit
      right: calc(50% + 89px)

