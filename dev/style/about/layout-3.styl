@import "../mixin/flex.styl"

.layout__wrapper-3
  margin-bottom: 126px
  @media(max-width: 1023px)
    margin-bottom: 70px
  .layout__text__wrapper
    flex(space-between, flex-start, row)
    @media(max-width: 1366px)
      padding: 0 72px
    @media(max-width: 767px)
      flex-wrap: wrap
      padding: 0 10px

  .layout__text_p
    font-size: 18px
    line-height: 25px
    color: rgba(51,51,51,0.78)
    font-family: Roboto, Arial, sans-serif
    max-width: 797px
    @media(max-width: 1023px)
      max-width: 380px
      font-size: 16px
    @media(max-width: 767px)
      max-width: 100%
      margin-bottom: 25px

  .metro
    &__img__wrapper
      flex(flex-end, center, row)
      margin-bottom: 40px
      @media(max-width: 767px)
        justify-content: flex-start
        margin-bottom: 10px
    &__img
      width: 24px
      min-width: 24px
      height: 24px
      margin-right: 10px
      img
        width: 100%
        height: auto
    &__text
      font-family: "Gilroy-SemiBold", Arial, sans-serif
      font-size: 24px
      line-height: 29px
      color: #005BB9
    &__text_p
      font-size: 16px
      line-height: 132%
      color: rgba(51,51,51,0.78)
      font-family: Roboto, Arial, sans-serif
      text-align: right


.tabs__map__ul
  flex(space-between, center, row)
  margin-bottom: 23px
  @media(max-width: 1366px)
    padding: 0 72px
  @media(max-width: 1280px)
    flex-wrap: wrap
    justify-content: flex-start
  @media(max-width: 767px)
    padding: 0 10px
  .tab__li
    font-size: 18px
    line-height: 25px
    font-family: Roboto, Arial, sans-serif
    padding: 2px 16px
    cursor: pointer
    &:hover
      color: #005BB9
    &-active
      background-color: #005BB9
      color: #fff
      &:hover
        color: #fff
    @media(max-width: 1024px)
      margin-right: 18px
      margin-bottom: 8px
      &:last-child
        margin-right: 0
.tabs__map__content
  flex(center, center, row)
  margin-bottom: 22px
  .tab__content
    img
      width: 100%
      height: auto

