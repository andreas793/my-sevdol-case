.layout__wrapper
  max-width: 1366px
  margin:  0 auto
.layout__title
  margin-bottom: 43px
  font-size: 24px
  line-height: 112%
  font-family: Gilroy-Bold, Arial, sans-serif
  text-transform: uppercase
  color: #005BB9
  @media(max-width: 1366px)
    padding: 0 72px
  @media(max-width: 767px)
    padding: 0 10px
    margin-bottom: 25px
.layout__text
  font-family: Roboto, Arial, sans-serif
  font-size: 18px
  line-height: 25px
  color: rgba(51, 51, 51, 0.78)
  @media(max-width: 1366px)
    margin-left: 72px
  @media(max-width: 1024px)
    margin: 0 72px
    max-width: 100%
    font-size: 16px
    line-height: 132%
  @media(max-width: 767px)
    margin: 0 10px

