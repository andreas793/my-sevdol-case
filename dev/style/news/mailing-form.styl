@import "../mixin/flex.styl"

.mailing-form
  &__wrapper
    max-width: 780px
    width: 100%
    margin: 0 auto 114px auto
    box-sizing: border-box
    padding: 54px 0 58px 0
    box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.1);
    position: relative
    @media(max-width: 1024px)
      padding: 40px 20px
    &:after
      content: ''
      display: block
      width: 66px
      height: 85px
      position: absolute
      top: 0
      left: 0
      background: url("../img/news/mailing-bg.svg") no-repeat 50% 50%
    &:before
      content: ''
      display: block
      width: 101px
      height: 112px
      position: absolute
      bottom: 0
      right: 37px
      background: url("../img/news/mailing-bg-2.svg") no-repeat 50% 50%
    @media(max-width: 1023px)
      &:after, &:before
        display: none
  &__text
    font-size: 14px
    line-height: 16px
    font-family: "Roboto", Arial, sans-serif
    color: rgba(58, 57, 60, 0.78)
    text-align: center
    margin-bottom: 33px
    &-small
      font-family: "Roboto", Arial, sans-serif
      font-size: 12px
      line-height: 14px
      text-align: center
      color: rgba(58, 57, 60, 0.6)
  &__title
    font-size: 24px
    line-height: 29px
    color: #3A393C
    font-family: "Gilroy-Bold", Arial, sans-serif
    text-align: center
    margin-bottom: 7px
    text-transform: uppercase
  &
    flex(center, center, row)
    margin-bottom: 16px
    .input__wrapper
      width: 100%
      max-width: 356px
      padding: 12px 16px
      box-sizing: border-box
      border:  1px solid rgba(58, 57, 60, 0.2)
      font-family: "Roboto", Arial, sans-serif
      margin-right: 8px
      input[type="text"]
        border: none
        box-shadow: none
        outline: none
        padding: 0
        font-family: "Roboto", Arial, sans-serif
        font-size: 14px
        line-height: 16px
        width: 100%
        &::placeholder
          color: #BEBEBE
          font-family: "Roboto", Arial, sans-serif
    .button__wrapper
      width: 191px
      height: 44px
      padding: 13px 0 15px 0
      background-color: #0072C7
      border: none
      color: #fff
      cursor: pointer
      text-transform: uppercase
      font-family: "Gilroy", Arial, sans-serif
      font-size: 14px
      line-height: 16px
    @media(max-width: 1024px)
      margin-block-end: 0
      margin-bottom: 40px
      &__wrapper
        padding: 50px 40px
      &__text
        font-size: 14px
        line-height: 17px
      &__title
        font-size: 24px
        line-height: 34px
      .input__wrapper
        max-width: 380px
        margin-right: 20px
        margin-bottom: 0
      .button
        width: 100%
        max-width: 220px
    @media(max-width: 768px)
      &__wrapper
        margin-bottom: 80px
        max-width: 620px
    @media(max-width: 450px)
       flex-wrap: wrap
       &__wrapper
        max-width: none
        padding: 40px
        margin-bottom: 74px
        &:after
          width: 50px
          height: 50px
          background-size: cover
          top: -25px
          right: 20px
       &__title
          font-size: 20px
          line-height: 24px
       &__text
          font-size: 12px
          line-height: 14px
       .input__wrapper
        margin-bottom: 20px
        margin-right: 0
       .button__wrapper
          width: 100%
          max-width: 100%
          font-size: 12px
          line-height: 14px
          margin-bottom: 20px



