@import "../mixin/flex.styl"

.layout-7
  @media(max-width: 450px)
    padding: 0
    margin-bottom: 60px
  .layout
    &__title
      margin-bottom: 50px
    &__text
      margin-bottom: 47px
      &__p
        margin-bottom: 27px
        &:last-child
          margin-bottom: 0
    @media(max-width: 450px)
      &__title
        margin-bottom: 30px
        margin-left: 10px
      &__text
        margin-bottom: 39px
        margin-left: 10px
        &__p
          margin-bottom: 21px
          &:last-child
            margin-bottom: 0
  .main__img
    max-width: 1000px
    width: 100%
    margin-right: 40px
    img
      width: 100%
      height: auto
    &-mob
      display: none
    &__wrapper
      position: relative
      flex(flex-start, flex-end, row)
      .items__wrapper
        flex-direction column
        &__title
          min-width: 132px
          width: 132px
          font-size: 24px
          line-height: 110%
          color: #003349
          text-transform: uppercase
          margin-bottom: 32px
          font-family: 'Gilroy-Bold', Arial, sans-serif
        .item
          &__wrapper
            min-width: 100px
            width: 100px
            height: 100px
            margin-bottom: 20px
            border: 3px solid #9C9C9C
            border-radius 2px
            box-sizing border-box
            position: relative
            padding: 10px 12px
            flex(flex-end, flex-start, column)
            &:last-child
              margin-bottom: 0
          &__icon
            width: 20px
            min-width: 20px
            height: 20px
            position: absolute
            top: 10px
            right: 10px
            svg
              width: 100%
              height: auto
          &__text
            font-size: 12px
            line-height: 120%
            font-family: 'Gilroy-Bold', Arial, sans-serif
            text-transform: uppercase
            width: 75px
            color: #003349
            font-weight: 900
    @media(max-width: 450px)
      margin-right: 0
      &-desk
        display: none
      &-mob
        display: block
      &__wrapper
        .items__wrapper
          position: absolute
          left: 10px
          bottom: 40px
          &__title
            color: #fff
            width: 100%
            min-width: auto
          .item
            &__wrapper
              border-color: #fff
            &__text
              color: #fff
            &__icon
              svg
                path
                  stroke: #fff

