.layout-4
  max-width: 1440px
  @media(max-width: 450px)
    margin-bottom: 69px
  .layout
    &__title
      margin-bottom: 60px
      margin-left: 40px
  .items__wrapper
      margin-bottom: 58px
      margin-left: 40px
      .item
        &__wrapper
          margin-right: 97px
        &__icon
          width: 28px
          min-width: 28px
          margin-right: 20px
  .map__section
    width: 100%
    height: 640px
  @media (max-width: 450px)
    padding: 0
    .layout__title
      margin-bottom: 35px
      margin-left: 10px
    .items__wrapper
      margin-bottom: 33px
      margin-left: 10px
      flex-direction: column
      .item
        &__wrapper
          margin-bottom: 24px
          margin-right: 0
          &:last-child
            margin-bottom: 0
        &__icon
          width: 20px
          min-width: 20px
          margin-right: 13px
        &__text
          font-size: 14px
          line-height: 130%
    .map__section
      width: 100%
      height: 320px

