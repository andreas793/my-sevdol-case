.button
  display: inline-block
  padding: 16px 30px
  font-size: 13px
  line-height: 16px
  font-family: 'Gilroy', Arial, sans-serif
  color: #fff
  background-color: #0072C7
  border: 1px solid #0072C7
  border-radius: 2px
  white-space: nowrap
  cursor pointer
  box-sizing: border-box
  &:hover
    color: #fff
  &:focus
    outline: none
    background-color: #0072C7

