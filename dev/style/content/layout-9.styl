@import "../mixin/flex.styl"
.layout-9
  max-width: 1440px
  width: 100%
  .items__wrapper
    .item__wrapper
      display: block
    @media(max-width: 1024px)
      flex-direction: column

  .layout
    &__title
      margin-bottom: 57px
      margin-left: 40px
    &__subtitle
      margin-left: 40px
      margin-bottom: 33px
      flex(flex-start, center, row)
      .icon__wrapper
        min-width: 30px
        width: 30px
        margin-right: 10px
        img
          width: 100%
          height: auto
      .text
        text-transform: uppercase
        font-family: 'Gilroy-Bold', Arial, sans-serif
        font-size: 18px
        line-height: 90%
        letter-spacing: 0.01em
    &__text
      margin-left: 80px
      margin-bottom: 24px
    &__link
      display: inline-block
      margin-bottom: 24px
      margin-left: 80px
      position: relative
      color: #0072CE
      font-size: 17px
      line-height: 150%
      font-family: 'Roboto', Arial, sans-serif
      &:after
        display: block
        content: ''
        width: 100%
        height: 1px
        background-color: #0072CE
        position: absolute
        bottom: 0
        left: 0
  .map__section
    width: 100%
    height: 640px
  @media(max-width: 450px)
    padding: 0
    margin-bottom: 60px
    .layout
      &__title
        margin-bottom: 30px
        margin-left: 10px
      &__subtitle
        margin-bottom: 26px
        margin-left: 10px
        .icon__wrapper
          min-width: 24px
          width: 24px
          margin-right: 6px
        .text
          font-size: 16px
          line-height: 90%
      &__text
        margin-bottom: 20px
        margin-left: 10px
      &__link
        margin-bottom: 28px
        margin-left: 10px

    .map__section
      width: 100%
      height: 210px





