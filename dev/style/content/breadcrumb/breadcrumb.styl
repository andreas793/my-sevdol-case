.breadcrumb
  padding: 150px 0 0 0
  background-color: #fff
  max-width: 1366px
  margin: 0 auto 51px auto

@media(max-width: 1360px)
  .breadcrumb
    margin-left: 42px


@media(max-width: 1024px)
  .breadcrumb
    padding: 120px 0 0 0


@media(max-width: 767px)
  .breadcrumb
    margin-left: 10px
    padding: 150px 0 0 0


.bx-breadcrumb
  margin: 0
  color: #A3A3A3
  font-family: 'Geometria', Arial, sans-serif
  font-size: 14px
  line-height: 140%

.bx-breadcrumb a
  color: #A3A3A3
  text-decoration: underline


.bx-breadcrumb a:hover
  color: #353535
  text-decoration: underline
